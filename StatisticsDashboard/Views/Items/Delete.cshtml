@model StatisticsDashboard.Models.Item
@{
    ViewData["title"] = "Delete Item";
}
<h3>Delete Item</h3>

<p>Are you sure you want to delete this item?</p>

<p>Name: <strong>@Model.Name</strong></p>
<p>Price: <strong>@Model.Price.ToString("N2") $</strong></p>

<!-- action is Delete but method is DeleteConfirmer -> we use ActionName! -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>